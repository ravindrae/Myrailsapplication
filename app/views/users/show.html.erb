
<div>
<div class="profile col-sm-2">
  <%= image_tag @user.gravatar_url%>
</div>
<h4 class=col-sm-4>
  <%=@user.name.capitalize%><br>
  <%=@user.email%>
</h3>
</div>
<div class="col-md-8">
  <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
  <% end %>
</div>
