<li id="micropost-<%= micropost.id %>">
  <div class="col-sm-2">
  <%= image_tag  micropost.user.gravatar_url%>
</div>
  <div class="col-sm-10">
  <span class="user"><%= link_to micropost.user.name.capitalize, micropost.user %></span><br>
  <span class="content"><%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span><br>
  <span class="timestamp">Posted <%= time_ago_in_words(micropost.created_at) %> ago.<br>
  <% if current_user==micropost.user %>
    <%= link_to "delete", micropost, method: :delete,data: { confirm: "You sure?" } %>
  <% end %>
  </span>
</div>
</li>
