<header>
  <nav class="navbar navbar-fixed-top navbar-inverse">
          <div class=container>
          <%= link_to "Myrails app",root_path,id: "logo"%>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Home", root_path%></li>
          <li><%= link_to "About", static_pages_about_path %></li>
          <li><%= link_to "Help", static_pages_help_path %></li>

          <% if logged_in? %>
            <li><%= link_to "Users", users_path%></li>

            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%=current_user.name.upcase%>
                  <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                      <li><%= link_to "Profile", current_user %></li>
                      <li><%= link_to "Update", edit_user_path(current_user) %></li>
                      <li class="divider"></li>
                      <li><%= link_to "Log out", logout_path, method: :delete %></li>
                  </ul>
            </li>

          <% else %>
            <li><%= link_to "Log in", login_path %></li>
          <% end %>
        </ul>
        </div>
  </nav>
</header>
